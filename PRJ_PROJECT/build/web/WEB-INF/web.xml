<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ManageOrderServlet</servlet-name>
        <servlet-class>controllers.ManageOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetOrderDetailServlet</servlet-name>
        <servlet-class>controllers.GetOrderDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageDishesServlet</servlet-name>
        <servlet-class>controllers.ManageDishesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controllers.login.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProfileServlet</servlet-name>
        <servlet-class>controllers.login.EditProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controllers.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controllers.login.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>controllers.login.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getlist</servlet-name>
        <servlet-class>controllers.GetListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>list-dishes</servlet-name>
        <servlet-class>controllers.ListDishesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>view-food</servlet-name>
        <servlet-class>controllers.ViewFoodServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add-to-cart</servlet-name>
        <servlet-class>controllers.AddToCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>view-cart</servlet-name>
        <servlet-class>controllers.ViewCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlaceOrderServlet</servlet-name>
        <servlet-class>controllers.PlaceOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetOrderDetailServlet</servlet-name>
        <url-pattern>/GetOrderDetailServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageDishesServlet</servlet-name>
        <url-pattern>/ManageDishesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getlist</servlet-name>
        <url-pattern>/getlist</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
